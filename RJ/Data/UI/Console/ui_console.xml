<gamedata>

  <include file="UI/Console/console_resources.xml" />
  
  <uilayout>
    <Code>UI_CONSOLE</Code>
    <Description>Debug Console</Description>

    <!-- Console background -->
    <!--Image2D code="console_back" material="console_back" x="0" y="0" z="0.0015" width="1366" height="300" render="true" /-->
      
    <!-- Textbox components -->
    <Image2D code="textbox_frame" material="textbox_normal" x="0" y="274" z="0.001" width="1366" height="32" acceptsmouse="true" render="true" />
    <Image2D code="textbox_frame_focus" material="textbox_focus" x="0" y="274" z="0.001" width="1366" height="32" acceptsmouse="true" render="true" />
     
    <!-- Console input textbox -->
    <TextBlock code="txt_input_text_prefix" text=">" x="12" y="270" render="true" capacity="4" size="10.0" />
    <TextBlock code="txt_input_text" text="" x="28" y="270" render="true" capacity="1024" size="10.0" />
    <TextBox code="txt_input" frame="textbox_frame" frame_key="txt_input_fr" frame_focus="textbox_frame_focus" frame_focus_key="txt_input_frf" text="txt_input_text" render="true" />

    <!-- Console history text display -->
    <MultiLineTextBlock code="mltb_history" mode="IndividualLines" x="0" y="-6" z="0.001" size="10.0" linecount="12" maxlinelength="512" />



  </uilayout>
</gamedata>
